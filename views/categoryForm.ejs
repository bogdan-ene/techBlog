<div class="columns is-centered">
    <div class="column is-half">
        <form>
            <div class="field">
                <label class="label">Your Name</label>
                <div class="control">
                    <input class="input" type="text" placeholder="Enter your name">
                </div>
            </div>

            <div class="field">
                <label class="label">Subject</label>
                <div class="control">
                    <input class="input" type="text" placeholder="Enter the subject">
                </div>
            </div>

            <div class="field">
                <label class="label">Post Article</label>
                <div class="control">
                    <textarea class="textarea" placeholder="Enter your article"></textarea>
                </div>
            </div>

            <div class="field is-grouped">
                <div class="control">
                    <button class="button is-link">Submit</button>
                </div>
                <div class="control">
                    <button class="button is-link is-light">Cancel</button>
                </div>
            </div>
        </form>
    </div>
</div>
